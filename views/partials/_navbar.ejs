<nav id="navbar">
  <% if (user) { %>
  <div>
    <div id="profile-icon">
      <a href="/auth/profile">
        <img src="<%= user.profilePicture %>" width="40" height="40" style="border-radius: 50%;">
      </a>
    </div>
    <a href="/" id="home-link">Home</a>
    <% if (user.role === 'Admin') { %>
      <a href="/patients" id="view-link">View Patients</a>
    <% } else if (user.role === 'Patient') { %>
      <a href="/patients/me" id="view-link">My Info</a>
    <% } %>
    <a href="/auth/sign-out" id="sign-out-link">Sign Out</a>
  </div>
  <% } else { %>
  <div>
    <a href="/auth/sign-up" id="sign-up-link">Sign Up</a>
    <a href="/auth/sign-in" id="sign-in-link">Sign In</a>
  </div>
  <% } %>
</nav>
